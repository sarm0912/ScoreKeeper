<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shanel.scorekeeper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher" 
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        
        >
        <activity
            android:name="com.shanel.scorekeeper.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
             
        <activity
            android:name=".ScoreActivity"
            android:label="Score Keeper"
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter >
                <action android:name="com.shanel.scorekeeper.ScoreActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>        
            </intent-filter>
        </activity>
        
         <activity
            android:name=".DiceActivity"
            android:label="Dice Roller" 
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter >
                <action android:name="com.shanel.scorekeeper.DiceActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>        
            </intent-filter>
        </activity>
        
           <activity
            android:name=".TimerActivity"
            android:label="Timer" 
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter >
                <action android:name="com.shanel.scorekeeper.TimerActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>        
            </intent-filter>
        </activity>
        
    </application>

</manifest>
